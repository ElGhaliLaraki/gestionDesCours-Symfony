{% extends 'base.html.twig' %}

{% block body %}
		<div class="container">
        <div class="main_title">
				<br><h2>Formulaire d'Inscription</h2>
                <p>Nous comptons sur vous</p>
			</div>
            <div class="row">
    <div class="col "></div>
    <div class="col ">
    
    {{ form_start (form) }}
