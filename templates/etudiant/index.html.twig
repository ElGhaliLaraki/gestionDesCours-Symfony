{% extends 'base.html.twig' %}

{% block title %}Etudiants{% endblock %}

{% block body %}
<br><br>
<div class="container">
    <h1>Etudiants</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Tel</th>
                <th>CNE</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.id }}</td>
                <td>{{ etudiant.Nom }}</td>
                <td>{{ etudiant.Prenom }}</td>
                <td>{{ etudiant.Email }}</td>
                <td>{{ etudiant.Tel }}</td>
                <td>{{ etudiant.CNE }}</td>
                <td>
                    <a href="{{ path('etudiant_show', {'id': etudiant.id}) }}">show</a>
                    <a href="{{ path('etudiant_edit', {'id': etudiant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}
